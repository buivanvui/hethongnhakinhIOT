<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/rooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="Light livingroom"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/light2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/a5"
        android:text="Light outside"
        android:textColor="@color/black" />
    <RelativeLayout
        android:id="@+id/a5"
        android:layout_width="1.3in"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rooms"
        android:background="@drawable/vien">
        <TextView
            android:id="@+id/op_cls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bật/Tắt"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/imageView"/>
        <TextView
            android:id="@+id/mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chế độ"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/op_cls"
            android:layout_toRightOf="@+id/imageView"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swcontrol"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sw"
            android:layout_toRightOf="@+id/mode"
            android:layout_marginLeft="10dp"
            android:checked="false"
            android:textOff="man"
            android:textOn="auto"
            app:showText="true"
            app:switchMinWidth="60dp"
            app:thumbTint="@drawable/sw_thumb_2"
            app:trackTint="@color/date_color"></androidx.appcompat.widget.SwitchCompat>

        <ImageButton
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/light_close"
            android:scaleType="fitCenter"
            android:background="#28FFFFFF"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sw"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/op_cls"
            android:layout_marginLeft="10dp"
            android:checked="false"
            android:textOff="tắt"
            android:textOn="bật"
            app:showText="true"
            app:switchMinWidth="60dp"
            app:thumbTint="@drawable/switch_thumb"
            app:trackTint="@color/date_color"></androidx.appcompat.widget.SwitchCompat>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/a6"
        android:layout_width="1.3in"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rooms"
        android:layout_toRightOf="@+id/a5"
        android:background="@drawable/vien">
        <TextView
            android:id="@+id/op_cls1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bật/Tắt"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/imageView2"/>
        <TextView
            android:id="@+id/mode1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chế độ"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/op_cls1"
            android:layout_toRightOf="@+id/imageView2"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swcontrol2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sw2"
            android:layout_toRightOf="@+id/mode1"
            android:layout_marginLeft="10dp"
            android:checked="false"
            android:textOff="man"
            android:textOn="auto"
            app:showText="true"
            app:switchMinWidth="60dp"
            app:thumbTint="@drawable/sw_thumb_2"
            app:trackTint="@color/date_color"></androidx.appcompat.widget.SwitchCompat>

        <ImageButton
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/light_close"
            android:scaleType="fitCenter"
            android:background="#28FFFFFF"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sw2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/op_cls1"
            android:checked="false"
            android:textOff="tắt"
            android:textOn="bật"
            app:showText="true"
            app:switchMinWidth="60dp"
            android:layout_marginLeft="10dp"
            app:thumbTint="@drawable/switch_thumb"
            app:trackTint="@color/date_color"></androidx.appcompat.widget.SwitchCompat>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/r8"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/a5"        android:layout_marginTop="20dp"
        android:background="@drawable/vien">

        <TextView
            android:id="@+id/txt4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Thông số cài đặt ánh sáng:"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/d"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-100dp"
            android:layout_toRightOf="@+id/txt4"
            android:textColor="@color/black"
            android:textSize="22dp"></TextView>
    </RelativeLayout>
</RelativeLayout>