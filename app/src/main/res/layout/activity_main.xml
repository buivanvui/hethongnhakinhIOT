<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#22999999"
        tools:context=".MainActivity">

        <RelativeLayout
            android:id="@+id/r21"
            android:layout_width="match_parent"
            android:layout_height="1.1in">

            <LinearLayout
                android:id="@+id/a12"
                android:layout_width="0.6in"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/vien"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_weather"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/livingroom"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/nhietdo"
                    android:background="@drawable/sun" />

                <TextView
                    android:id="@+id/weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/livingroom"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/img_light"
                    android:text="Sunny"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/a1"
                android:layout_width="0.3in"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/a10"
                android:background="@drawable/vien"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/clock"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/alarm"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/a10"
                android:layout_width="0.3in"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/a12"
                android:background="@drawable/vien"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/detect_gas"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/detect_gas"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/a11"
                android:layout_width="0.3in"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/a12"
                android:layout_marginRight="40dp"
                android:background="@drawable/vien"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/detect_human"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/motion_sensor"/>
            </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0.85in"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/vien"
            android:layout_below="@+id/a12">
            <RelativeLayout
                android:id="@+id/r11"
                android:layout_width="70dp"
                android:layout_height="0.75in"
                android:layout_marginLeft="20dp"
                android:background="@drawable/vien2"
                android:layout_centerVertical="true">
                <RelativeLayout
                    android:id="@+id/r12"
                    android:layout_width="60dp"
                    android:layout_height="0.4in"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/vien_img">

                    <ImageButton
                        android:id="@+id/btn_next"
                        android:layout_width="40dp"
                        android:layout_height="0.24in"
                        android:layout_centerVertical="true"
                        android:background="@drawable/home"
                        android:backgroundTint="@color/blue"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r12"
                android:text="House"
                android:textSize="16dp"
                    android:layout_marginTop="10dp"
                 android:layout_centerHorizontal="true"
                android:textColor="@color/black"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/r14"
                android:layout_width="70dp"
                android:layout_height="0.75in"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/r11"
                android:background="@drawable/vien2"
                android:layout_centerVertical="true">
                <RelativeLayout
                    android:id="@+id/r13"
                    android:layout_width="60dp"
                    android:layout_height="0.4in"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/vien_img_default">

                    <ImageButton
                        android:id="@+id/btn_next2"
                        android:layout_width="40dp"
                        android:layout_height="0.24in"
                        android:layout_centerVertical="true"
                        android:background="@drawable/light_close"
                        android:backgroundTint="#F44336"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/r13"
                    android:text="Light"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/r15"
                android:layout_width="70dp"
                android:layout_height="0.75in"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/r14"
                android:background="@drawable/vien2"
                android:layout_centerVertical="true">
                <RelativeLayout
                    android:id="@+id/r16"
                    android:layout_width="60dp"
                    android:layout_height="0.4in"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/vien_img_default">

                    <ImageButton
                        android:id="@+id/btn_next3"
                        android:layout_width="40dp"
                        android:layout_height="0.24in"
                        android:layout_centerVertical="true"
                        android:background="@drawable/fan_img"
                        android:backgroundTint="#009688"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/r16"
                    android:text="Fan"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/r17"
                android:layout_width="70dp"
                android:layout_height="0.75in"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/r15"
                android:layout_marginRight="20dp"
                android:background="@drawable/vien2"
                android:layout_centerVertical="true">
                <RelativeLayout
                    android:id="@+id/r18"
                    android:layout_width="60dp"
                    android:layout_height="0.4in"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/vien_img_default">

                    <ImageButton
                        android:id="@+id/btn_next4"
                        android:layout_width="40dp"
                        android:layout_height="0.24in"
                        android:layout_centerVertical="true"
                        android:background="@drawable/door"
                        android:backgroundTint="#673AB7"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/r18"
                    android:text="Door"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"/>
            </RelativeLayout>
        </RelativeLayout>

        </RelativeLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/r21"
            android:layout_marginTop="0dp"></androidx.viewpager2.widget.ViewPager2>

    </RelativeLayout>

</ScrollView>