<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#22999999">
    <TextView
        android:id="@+id/rooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r10"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:text="Rooms"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/Sensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:text="Sensor"
        android:textColor="@color/black" />
    <RelativeLayout
        android:id="@+id/r10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Sensor"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/vien">
        <RelativeLayout
            android:id="@+id/r13"
            android:layout_width="60dp"
            android:layout_height="0.4in"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/vien_img3">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="0.24in"
                android:layout_centerVertical="true"
                android:background="@drawable/temperature"
                android:backgroundTint="#FF2222"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <TextView
            android:id="@+id/nhietdo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/r13"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="20 â„ƒ"
            android:textSize="20dp"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/r13"
            android:layout_below="@+id/nhietdo1"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:text="Temperature"
            android:textSize="17dp"
            android:textColor="@color/black" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/r11"
        android:layout_width="1.2in"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Sensor"
        android:layout_toEndOf="@+id/r10"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/vien">
        <RelativeLayout
            android:id="@+id/r14"
            android:layout_width="60dp"
            android:layout_height="0.4in"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/vien_img">
            <ImageView
                android:id="@+id/btn_next2"
                android:layout_width="40dp"
                android:layout_height="0.24in"
                android:layout_centerVertical="true"
                android:background="@drawable/humidity1"
                android:backgroundTint="#3F51B5"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <TextView
            android:id="@+id/doam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/r14"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="40 %"
            android:textSize="20dp"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/r14"
            android:layout_below="@+id/doam"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:text="Humidity"
            android:textSize="17dp"
            android:textColor="@color/black" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="0.8in"
        android:layout_below="@+id/rooms"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/a7"
            android:layout_width="1.2in"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/vien">

            <TextView
                android:id="@+id/livingroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgbtn_livingroom"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Living room"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <ImageButton
                android:id="@+id/imgbtn_livingroom"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/living_room" />
        <RelativeLayout
            android:id="@+id/a17"
            android:layout_width="wrap_content"
            android:layout_height="0.5in"
            android:layout_toEndOf="@+id/imgbtn_livingroom"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/img_light"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/stament_light" />

            <TextView
                android:id="@+id/count_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@+id/img_light"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/img_fan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/img_light"
                android:layout_marginTop="10dp"
                android:background="@drawable/fan" />

            <TextView
                android:id="@+id/count_fan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_light"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@+id/img_fan"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/a8"
            android:layout_width="1.2in"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/vien">

            <TextView
                android:id="@+id/outside"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgbtn_outside"
                android:text="Outside"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:textSize="16dp"
                android:textColor="@color/black" />
            <ImageView
                android:id="@+id/img_light1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_toEndOf="@+id/imgbtn_outside"
                android:background="@drawable/stament_light"/>
            <ImageView
                android:id="@+id/door"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="40dp"
                android:layout_below="@+id/img_light1"
                android:layout_toEndOf="@+id/imgbtn_outside"
                android:src="@drawable/exit_close"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/count_light1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="25dp"
                android:layout_toEndOf="@+id/img_light1"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="16dp" />
            <ImageButton
                android:id="@+id/imgbtn_outside"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/park"
              />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>