<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#22999999">
    <TextView
        android:id="@+id/rooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="Light livingroom"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/light2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/a5"
        android:text="Light outside"
        android:textColor="@color/black" />
    <RelativeLayout
        android:id="@+id/a5"
        android:layout_width="1.2in"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rooms"
        android:background="@drawable/vien">

        <Switch
            android:id="@+id/swcontrol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sw"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:textStyle="bold|italic"
            android:textSize="18dp"
            android:text="Mode"
            android:layout_toRightOf="@+id/imageView"></Switch>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter" />

        <Switch
            android:id="@+id/sw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:checked="false"
            android:textStyle="bold|italic"
            android:textSize="18dp"
            android:text="On/Off"
            android:gravity="left"
            android:layout_toRightOf="@+id/imageView"></Switch>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/a6"
        android:layout_width="1.2in"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rooms"
        android:layout_toRightOf="@+id/a5"
        android:layout_marginLeft="10dp"
        android:background="@drawable/vien">
        <Switch
            android:id="@+id/swcontrol2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sw2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold|italic"
            android:textSize="18dp"
            android:text="Mode"
            android:gravity="left"
            android:layout_toRightOf="@+id/imageView2"></Switch>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter" />

        <Switch
            android:id="@+id/sw2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold|italic"
            android:checked="false"
            android:textSize="18dp"
            android:text="On/Off"
            android:gravity="left"
            android:layout_toRightOf="@+id/imageView2"></Switch>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/r8"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/a5"        android:layout_marginTop="20dp"
        android:background="@drawable/vien">

        <TextView
            android:id="@+id/txt4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Thông số cài đặt ánh sáng:"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/d"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-100dp"
            android:layout_toRightOf="@+id/txt4"
            android:textColor="@color/black"
            android:textSize="22dp"></TextView>
    </RelativeLayout>
</RelativeLayout>